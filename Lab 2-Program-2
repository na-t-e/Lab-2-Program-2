#include <iostream>
#include <iomanip>
#include <cmath>

using namespace std;

const float INT_RATE = 0.05;

int main()
{
float balance = 1000;
float deposit = 0;
float newBal = 0;
float interest = 0;

cout << "Please enter the deposit amount: $";
cin >> deposit;

newBal = balance + deposit;
interest = (newBal * INT_RATE) / 12;
cout << "\n---------------- Account Summary ------------------\n" << endl;
cout << left << setw(20) << "Previous balance: " << right << setw(10) << "$ "
<< balance << endl;
cout << left << setw(20) << "Deposit Amount: " << right << setw(10) << "$ " <<
deposit << endl;
cout << left << setw(20) << "New Balance: " << right << setw(10) << "$ " <<
newBal << endl;
cout << left << setw(20) << "Monthly Interest: " << right << setw(10) << "$ "
<< interest << endl;
return 0;
}

// OUTPUT
